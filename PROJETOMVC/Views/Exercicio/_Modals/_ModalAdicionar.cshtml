using PROJETOMVC.Models;
using System;
using System.Text.RegularExpressions;
using static System.Runtime.InteropServices.JavaScript.JSType;

< div class= "modal fade" id = "modalAdicionar" tabindex = "-1" aria - hidden = "true" >
    < div class= "modal-dialog modal-dialog-centered modal-lg" >
        < div class= "modal-content rounded-4" >
            < div class= "modal-header bg-primary text-white" >
                < h5 class= "modal-title" >
                    < i class= "bi bi-plus-circle me-2" ></ i > Novo Exercício
                </ h5 >
                < button type = "button" class= "btn-close btn-close-white" data - bs - dismiss = "modal" ></ button >
            </ div >
            < form asp - action = "Adicionar" method = "post" >
                < div class= "modal-body" >
                    < div class= "row" >
                        < div class= "col-md-8 mb-3" >
                            < label class= "form-label fw-semibold" > Nome do Exercício *</ label >
                            < input type = "text" class= "form-control" name = "Nome" required placeholder = "Ex: Supino Reto" />
                        </ div >
                        < div class= "col-md-4 mb-3" >
                            < label class= "form-label fw-semibold" > Status </ label >
                            < div class= "form-check form-switch mt-2" >
                                < input class= "form-check-input" type = "checkbox" name = "Ativo" value = "true" checked id = "adicionarAtivo" >
                                < label class= "form-check-label" for= "adicionarAtivo" >
                                    Ativo
                                </ label >
                            </ div >
                        </ div >
                    </ div >

                    < div class= "mb-3" >
                        < label class= "form-label fw-semibold" > Grupo Muscular *</ label >
                        < select class= "form-select" name = "GrupoMuscular" required >
                            < option value = "" > Selecione...</ option >
                            < option value = "1" > Peito </ option >
                            < option value = "2" > Costas </ option >
                            < option value = "3" > Ombros </ option >
                            < option value = "4" > Bíceps </ option >
                            < option value = "5" > Tríceps </ option >
                            < option value = "6" > Pernas </ option >
                            < option value = "7" > Glúteos </ option >
                            < option value = "8" > Abdômen </ option >
                            < option value = "9" > Panturrilha </ option >
                            < option value = "10" > Antebraço </ option >
                            < option value = "11" > Cardio </ option >
                        </ select >
                    </ div >

                    < div class= "mb-3" >
                        < label class= "form-label fw-semibold" > Descrição </ label >
                        < textarea class= "form-control" name = "Descricao" rows = "3" maxlength = "500" placeholder = "Descreva como executar o exercício..." ></ textarea >
                        < small class= "text-muted" > Instruções de execução, dicas, cuidados, etc.</small>
                    </div>

                    <div class= "mb-3" >
                        < label class= "form-label fw-semibold" > Link do Vídeo(YouTube) </ label >
                        < input type = "url" class= "form-control" name = "VideoUrl" maxlength = "200" placeholder = "https://www.youtube.com/watch?v=..." />
                        < small class= "text-muted" > Cole o link do YouTube demonstrando o exercício</small>
                    </div>

                    <div class= "alert alert-info mb-0" >
                        < i class= "bi bi-info-circle me-2" ></ i >
                        < strong > Dica:</ strong > Cadastre exercícios com nomes claros para facilitar a busca depois.
                    </div>
                </div>
                <div class= "modal-footer" >
                    < button type = "button" class= "btn btn-secondary" data - bs - dismiss = "modal" > Cancelar </ button >
                    < button type = "submit" class= "btn btn-primary" >
                        < i class= "bi bi-check-circle me-2" ></ i > Cadastrar
                    </ button >
                </ div >
            </ form >
        </ div >
    </ div >
</ div >