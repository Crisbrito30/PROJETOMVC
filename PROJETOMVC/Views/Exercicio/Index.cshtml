@model IEnumerable<PROJETOMVC.Models.Exercicio>

@{
    ViewData["Title"] = "Lista de Exercícios";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">
            <i class="bi bi-lightbulb me-2"></i>Exercícios
        </h2>
        <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
            <i class="bi bi-plus-circle me-2"></i>Novo Exercício
        </button>
    </div>

    <partial name="_Mensagens" />

    <!-- Filtros -->
    <div class="card shadow-sm rounded-4 border-0 mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Filtrar por Grupo Muscular:</label>
                    <select class="form-select" id="filtroGrupo" onchange="filtrarPorGrupo()">
                        <option value="">Todos</option>
                        <option value="Peito">Peito</option>
                        <option value="Costas">Costas</option>
                        <option value="Ombros">Ombros</option>
                        <option value="Biceps">Bíceps</option>
                        <option value="Triceps">Tríceps</option>
                        <option value="Pernas">Pernas</option>
                        <option value="Gluteos">Glúteos</option>
                        <option value="Abdomen">Abdômen</option>
                        <option value="Panturrilha">Panturrilha</option>
                        <option value="Antebraco">Antebraço</option>
                        <option value="Cardio">Cardio</option>
                    </select>
                </div>
                <div class="col-md-6">
                    @if (ViewBag.FiltroAtual != null)
                    {
                        <div class="mt-3">
                            <span class="badge bg-info me-2">Filtro: @ViewBag.FiltroAtual</span>
                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Limpar Filtro</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Exercícios -->
    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nome</th>
                            <th>Grupo Muscular</th>
                            <th>Descrição</th>
                            <th>Status</th>
                            <th class="text-center pe-4" style="width: 180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var exercicio in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">
                                        @exercicio.Nome
                                        @if (!string.IsNullOrEmpty(exercicio.VideoUrl))
                                        {
                                            <a href="@exercicio.VideoUrl" target="_blank" class="ms-2" title="Ver vídeo">
                                                <i class="bi bi-play-circle text-primary"></i>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var grupoClass = exercicio.GrupoMuscular switch
                                            {
                                                PROJETOMVC.Models.Enums.GrupoMuscular.Peito => "bg-primary",
                                                PROJETOMVC.Models.Enums.GrupoMuscular.Costas => "bg-success",
                                                PROJETOMVC.Models.Enums.GrupoMuscular.Pernas => "bg-danger",
                                                PROJETOMVC.Models.Enums.GrupoMuscular.Ombros => "bg-warning text-dark",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @grupoClass">@exercicio.GrupoMuscular</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(exercicio.Descricao))
                                        {
                                            <small class="text-muted">@(exercicio.Descricao.Length > 50 ? exercicio.Descricao.Substring(0, 50) + "..." : exercicio.Descricao)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (exercicio.Ativo)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inativo</span>
                                        }
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditar"
                                                    onclick="editarExercicio(@exercicio.Id, '@exercicio.Nome', '@exercicio.Descricao', @((int)exercicio.GrupoMuscular), '@exercicio.VideoUrl', @exercicio.Ativo.ToString().ToLower())"
                                                    title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeletar"
                                                    onclick="prepararDeletar(@exercicio.Id, '@exercicio.Nome')"
                                                    title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-muted"></i>
                                    <p class="mt-3 text-muted">Nenhum exercício cadastrado.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* Modais separados *@
<partial name="_Modals/_ModalAdicionar" />
<partial name="_Modals/_ModalEditar" />
<partial name="_Modals/_ModalDeletar" />

@* Scripts *@
<partial name="_Scripts" />