@model PROJETOMVC.Models.ContatoModel

@{
    ViewData["Title"] = "Cadastro Contato";

}
<div class="container mt-4">
    <h2 class="mb-4">Cadastrar Contato</h2>

    <form asp-controller="Contato" asp-action="Criar" method="post">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Sobrenome" class="form-label"></label>
            <input asp-for="Sobrenome" class="form-control" placeholder="Digite o sobrenome" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite o e-mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Sexo" class="form-label"></label>
            <input asp-for="Sexo" class="form-control" placeholder="Digite o seu sexo" />
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Nascimento" class="form-label"></label>
            <input asp-for="Nascimento" type="date" class="form-control" placeholder="Digite seu nacimento" />
            <span asp-validation-for="Nascimento" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Telefone" class="form-label"></label>
            <input asp-for="Telefone" class="form-control" placeholder="Digite Telefone" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div> <div class="mb-3">
            <label asp-for="Cpf" class="form-label"></label>
            <input asp-for="Cpf" class="form-control" placeholder="Digite o CPF" />
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Permissao" class="form-label"></label>
            <input asp-for="Permissao" class="form-control" placeholder="PERMIS" />
            <span asp-validation-for="Permissao" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Salvar
        </button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>