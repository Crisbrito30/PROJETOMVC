@model IEnumerable<AcademiaApp.Models.Treino>
@{
    ViewData["Title"] = "Lista de Treinos";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">
            <i class="bi bi-clipboard-check me-2"></i>Treinos
        </h2>
        <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
            <i class="bi bi-plus-circle me-2"></i>Novo Treino
        </button>
    </div>

    <partial name="_Mensagens" />

    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nome</th>
                            <th>Aluno</th>
                            <th>Nível</th>
                            <th>Tipo</th>
                            <th>Período</th>
                            <th>Status</th>
                            <th class="text-center pe-4" style="width: 180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var treino in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@treino.Nome</td>
                                    <td>
                                        @if (treino.Usuario != null)
                                        {
                                            <span class="badge bg-info">@treino.Usuario.Nome</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Não atribuído</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var nivelClass = treino.Nivel switch
                                            {
                                                PROJETOMVC.Models.Enums.NivelDificuldade.Iniciante => "bg-success",
                                                PROJETOMVC.Models.Enums.NivelDificuldade.Intermediario => "bg-warning text-dark",
                                                PROJETOMVC.Models.Enums.NivelDificuldade.Avancado => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @nivelClass">@treino.Nivel</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@treino.Tipo</span>
                                    </td>
                                    <td>
                                        @if (treino.DataInicio.HasValue && treino.DataFim.HasValue)
                                        {
                                            <small>
                                                @treino.DataInicio.Value.ToString("dd/MM/yy") - @treino.DataFim.Value.ToString("dd/MM/yy")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (treino.Ativo)
                                        {
                                            <span class="badge bg-success bg-opacity-25 text-success fw-bold">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-25 text-secondary fw-bold">Inativo</span>
                                        }
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="d-flex gap-2 justify-content-center" role="group">
                                            <a asp-action="Detalhes" asp-route-id="@treino.Id" class="btn btn-sm btn-primary" title="Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditar"
                                                    onclick="editarTreino(@treino.Id, '@treino.Nome', '@treino.Descricao', @((int)treino.Nivel), @((int)treino.Tipo), '@treino.DataInicio?.ToString("yyyy-MM-dd")', '@treino.DataFim?.ToString("yyyy-MM-dd")', @treino.Ativo.ToString().ToLower(), @(treino.UsuarioId ?? 0))"
                                                    title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeletar"
                                                    onclick="prepararDeletar(@treino.Id, '@treino.Nome')"
                                                    title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-muted"></i>
                                    <p class="mt-3 text-muted">Nenhum treino cadastrado.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* Modais separados *@
<partial name="_Modals/_ModalAdicionar" />
<partial name="_Modals/_ModalEditar" />
<partial name="_Modals/_ModalDeletar" />

@* Scripts *@
<partial name="_Scripts" />