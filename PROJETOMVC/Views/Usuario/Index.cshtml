@model PROJETOMVC.Models.UsuarioFiltroViewModel
@using AcademiaApp.Models
@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>Usuários
            <span class="badge bg-primary ms-2">@Model.TotalItens</span>
        </h2>
        <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
            <i class="bi bi-plus-circle me-2"></i>Novo Usuário
        </button>
    </div>

    <partial name="_Mensagens" />

    <!-- FILTROS -->
    <div class="card shadow-sm rounded-4 border-0 mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-funnel me-2"></i>Filtros de Pesquisa
                <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="limparFiltros()">
                    <i class="bi bi-x-circle me-1"></i>Limpar
                </button>
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="formFiltros">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Nome</label>
                        <input type="text" class="form-control" asp-for="Nome" placeholder="Buscar por nome" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Buscar por email" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">CPF</label>
                        <input type="text" class="form-control" asp-for="Cpf" placeholder="Buscar por cpf" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">Perfil</label>
                        <select class="form-select" asp-for="PerfilUser">
                            <option value="">Todos</option>
                            <option value="1">Admin</option>
                            <option value="2">Gestor</option>
                            <option value="3">Padrão</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">Itens/Página</label>
                        <select class="form-select" asp-for="ItensPorPagina" onchange="this.form.submit()">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Data Início</label>
                        <input type="date" class="form-control" asp-for="dataInical" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Data Fim</label>
                        <input type="date" class="form-control" asp-for="dataFinal" />
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search me-2"></i>Pesquisar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Resetar
                        </a>
                    </div>
                </div>

                <!-- Campos ocultos para manter ordenação e página -->
                <input type="hidden" asp-for="OrdenarPor" />
                <input type="hidden" asp-for="ordernarDirecao" />
                <input type="hidden" asp-for="PaginaAtual" />
            </form>
        </div>
    </div>

    <!-- TABELA DE USUÁRIOS -->
    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">
                                <a href="javascript:void(0)" onclick="ordenar('Nome')" class="text-decoration-none text-dark">
                                    Nome
                                    @if (Model.OrdenarPor == "Nome")
                                    {
                                        <i class="bi bi-arrow-@(Model.ordernarDirecao == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="javascript:void(0)" onclick="ordenar('Login')" class="text-decoration-none text-dark">
                                    Login
                                    @if (Model.OrdenarPor == "Login")
                                    {
                                        <i class="bi bi-arrow-@(Model.ordernarDirecao == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="javascript:void(0)" onclick="ordenar('Email')" class="text-decoration-none text-dark">
                                    Email
                                    @if (Model.OrdenarPor == "Email")
                                    {
                                        <i class="bi bi-arrow-@(Model.ordernarDirecao == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="javascript:void(0)" onclick="ordenar('Perfil')" class="text-decoration-none text-dark">
                                    Perfil
                                    @if (Model.OrdenarPor == "Perfil")
                                    {
                                        <i class="bi bi-arrow-@(Model.ordernarDirecao == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="javascript:void(0)" onclick="ordenar('Data')" class="text-decoration-none text-dark">
                                    Data de Cadastro
                                    @if (Model.OrdenarPor == "Data")
                                    {
                                        <i class="bi bi-arrow-@(Model.ordernarDirecao == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th class="text-center pe-4" style="width: 180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Usuarios != null && Model.Usuarios.Any())
                        {
                            foreach (var usuario in Model.Usuarios)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@usuario.Nome</td>
                                    <td>@usuario.Cpf</td>
                                    <td>@usuario.Email</td>
                                    <td>
                                        @{
                                            var badgeClass = usuario.PerfilUser switch
                                            {
                                                AcademiaApp.Models.PerfilUser.Administrador => "bg-danger",
                                                AcademiaApp.Models.PerfilUser.Aluno => "bg-warning text-dark",
                                                _ => "bg-primary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@usuario.PerfilUser</span>
                                    </td>
                                    <td>@usuario.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#modalVisualizar" onclick="visualizarUsuario(@usuario.Id, '@usuario.Nome', '@usuario.Cpf', '@usuario.Email', '@usuario.PerfilUser', '@usuario.DataCadastro.ToString("dd/MM/yyyy")')">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditar" onclick="editarUsuario(@usuario.Id, '@usuario.Nome', '@usuario.Cpf', '@usuario.Email', '@usuario.PerfilUser')">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeletar" onclick="prepararDeletar(@usuario.Id, '@usuario.Nome')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-muted"></i>
                                    <p class="mt-3 text-muted">Nenhum usuário encontrado com os filtros aplicados.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- PAGINAÇÃO -->
        @if (Model.TotalPaginas > 1)
        {
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">
                            Mostrando @((Model.PaginaAtual - 1) * Model.ItensPorPagina + 1) 
                            a @(Math.Min(Model.PaginaAtual * Model.ItensPorPagina, Model.TotalItens)) 
                            de @Model.TotalItens registros
                        </small>
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <!-- Primeira página -->
                            <li class="page-item @(!Model.TemPaginaAnterior ? "disabled" : "")">
                                <a class="page-link" href="javascript:void(0)" onclick="irParaPagina(1)">
                                    <i class="bi bi-chevron-double-left"></i>
                                </a>
                            </li>

                            <!-- Página anterior -->
                            <li class="page-item @(!Model.TemPaginaAnterior ? "disabled" : "")">
                                <a class="page-link" href="javascript:void(0)" onclick="irParaPagina(@(Model.PaginaAtual - 1))">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            <!-- Páginas numeradas -->
                            @for (int i = Model.PaginaInicio; i <= Model.PaginaFim; i++)
                            {
                                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                                    <a class="page-link" href="javascript:void(0)" onclick="irParaPagina(@i)">@i</a>
                                </li>
                            }

                            <!-- Próxima página -->
                            <li class="page-item @(!Model.TemProximaPagina ? "disabled" : "")">
                                <a class="page-link" href="javascript:void(0)" onclick="irParaPagina(@(Model.PaginaAtual + 1))">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>

                            <!-- Última página -->
                            <li class="page-item @(!Model.TemProximaPagina ? "disabled" : "")">
                                <a class="page-link" href="javascript:void(0)" onclick="irParaPagina(@Model.TotalPaginas)">
                                    <i class="bi bi-chevron-double-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    </div>
</div>

<!-- MODAIS (os mesmos que você já tem) -->
<div class="modal fade" id="modalAdicionar" tabindex="-1" aria-hidden="true">
    <!-- Seu modal de adicionar existente -->
</div>

<div class="modal fade" id="modalVisualizar" tabindex="-1" aria-hidden="true">
    <!-- Seu modal de visualizar existente -->
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
    <!-- Seu modal de editar existente -->
</div>

<div class="modal fade" id="modalDeletar" tabindex="-1" aria-hidden="true">
    <!-- Seu modal de deletar existente -->
</div>

@section Scripts {
    <script>
        // Funções existentes
        function visualizarUsuario(id, nome, cpf, email, perfil, data) {
            document.getElementById('viewId').textContent = id;
            document.getElementById('viewNome').textContent = nome;
            document.getElementById('viewCpf').textContent = cpf;
            document.getElementById('viewEmail').textContent = email;
            document.getElementById('viewPerfil').textContent = perfil;
            document.getElementById('viewData').textContent = data;
        }

        function editarUsuario(id, nome, cpf, email, perfil) {
            document.getElementById('editId').value = id;
            document.getElementById('editNome').value = nome;
            document.getElementById('editCpf').value = cpf;
            document.getElementById('editEmail').value = email;

            var perfilValor = '3';
            if (perfil === 'Admin') perfilValor = '1';
            else if (perfil === 'Gestor') perfilValor = '2';
            else if (perfil === 'Padrao') perfilValor = '3';

            document.getElementById('editPerfil').value = perfilValor;
        }

        function prepararDeletar(id, nome) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteNome').textContent = nome;
        }

        // ✅ NOVAS FUNÇÕES PARA PAGINAÇÃO E ORDENAÇÃO
        function irParaPagina(pagina) {
            document.querySelector('input[name="PaginaAtual"]').value = pagina;
            document.getElementById('formFiltros').submit();
        }

        function ordenar(campo) {
            const ordenarPorInput = document.querySelector('input[name="OrdenarPor"]');
            const direcaoOrdemInput = document.querySelector('input[name="DirecaoOrdem"]');
            
            if (ordenarPorInput.value === campo) {
                // Inverte a direção
                direcaoOrdemInput.value = direcaoOrdemInput.value === 'asc' ? 'desc' : 'asc';
            } else {
                // Novo campo, começa com ascendente
                ordenarPorInput.value = campo;
                direcaoOrdemInput.value = 'asc';
            }
            
            // Volta para primeira página ao ordenar
            document.querySelector('input[name="PaginaAtual"]').value = 1;
            document.getElementById('formFiltros').submit();
        }

        function limparFiltros() {
            window.location.href = '@Url.Action("Index", "Usuario")';
        }
    </script>
}