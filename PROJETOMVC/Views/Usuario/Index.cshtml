@model IEnumerable<AcademiaApp.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>Usuários
        </h2>
        <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
            <i class="bi bi-plus-circle me-2"></i>Novo Usuário
        </button>
    </div>

    <partial name="_Mensagens" />

    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nome</th>
                            <th>Email</th>
                            <th>CPF</th>
                            <th>Tipo</th>
                            <th>Data de Cadastro</th>
                            <th class="text-center pe-4" style="width: 180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var usuario in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@usuario.Nome</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.Cpf</td>
                                    <td>
                                        @{
                                            var badgeClass = "bg-primary";
                                            var statusClass = usuario.Ativo ? "" : "opacity-50";

                                            if (usuario.PerfilUser == AcademiaApp.Models.PerfilUser.Administrador)
                                                badgeClass = "bg-danger";
                                            else if (usuario.PerfilUser == AcademiaApp.Models.PerfilUser.Treinador)
                                                badgeClass = "bg-warning text-dark";
                                            else
                                                badgeClass = "bg-primary";
                                        }
                                        <span class="badge @badgeClass @statusClass">
                                            @usuario.PerfilUser
                                        </span>
                                        @if (!usuario.Ativo)
                                        {
                                            <span class="badge bg-secondary ms-1">Inativo</span>
                                        }
                                    </td>
                                    <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#modalDetalhes"
                                                    onclick="visualizarUsuario(@usuario.Id, '@usuario.Nome', '@usuario.Email', '@usuario.Cpf', '@usuario.Telefone', '@usuario.PerfilUser', '@usuario.DataCadastro.ToString("dd/MM/yyyy")', '@usuario.DataNascimento?.ToString("dd/MM/yyyy")', '@usuario.Endereco', @usuario.Ativo.ToString().ToLower())"
                                                    title="Visualizar">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditar"
                                                    onclick="editarUsuario(@usuario.Id, '@usuario.Nome', '@usuario.Email', '@usuario.Cpf', '@usuario.Telefone', '@((int)usuario.PerfilUser)', @usuario.Ativo.ToString().ToLower())"
                                                    title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeletar"
                                                    onclick="prepararDeletar(@usuario.Id, '@usuario.Nome')"
                                                    title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-muted"></i>
                                    <p class="mt-3 text-muted">Nenhum usuário cadastrado.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* Modais separados em Partial Views *@
<partial name="_Modals/_ModalAdicionar" />
<partial name="_Modals/_ModalEditar" />
<partial name="_Modals/_ModalDeletar" />
<partial name="_Modals/_ModalDetalhes" /> 

@* Scripts separados *@
<partial name="_Scripts" />