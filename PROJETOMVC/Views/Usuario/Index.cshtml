@model List<PROJETOMVC.Models.UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>Usuários
        </h2>
        <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
            <i class="bi bi-plus-circle me-2"></i>Novo Usuário
        </button>
    </div>

    <partial name="_Mensagens" />
    


    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nome</th>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Perfil</th>
                            <th>Data de Cadastro</th>
                            <th class="text-center pe-4" style="width: 180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var usuario in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@usuario.Nome</td>
                                    <td>@usuario.Login</td>
                                    <td>@usuario.Email</td>
                                    <td>
                                        @{
                                            var badgeClass = "bg-primary";
                                            if (usuario.Perfil == PROJETOMVC.Enum.PerfilEnum.Admin)
                                                badgeClass = "bg-danger";
                                            else if (usuario.Perfil == PROJETOMVC.Enum.PerfilEnum.Gestor)
                                                badgeClass = "bg-warning text-dark";
                                            else
                                                badgeClass = "bg-primary";
                                        }
                                        <span class="badge @badgeClass">
                                            @usuario.Perfil
                                        </span>
                                    </td>
                                    <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#modalVisualizar" onclick="visualizarUsuario(@usuario.Id, '@usuario.Nome', '@usuario.Login', '@usuario.Email', '@usuario.Perfil', '@usuario.DataCadastro.ToString("dd/MM/yyyy")')">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditar" onclick="editarUsuario(@usuario.Id, '@usuario.Nome', '@usuario.Login', '@usuario.Email', '@usuario.Perfil')">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeletar" onclick="prepararDeletar(@usuario.Id, '@usuario.Nome')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-muted"></i>
                                    <p class="mt-3 text-muted">Nenhum usuário cadastrado.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAdicionar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-plus-circle me-2"></i>Novo Usuário
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Adicionar" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome</label>
                        <input type="text" class="form-control" name="Nome" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Login</label>
                        <input type="text" class="form-control" name="Login" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Senha</label>
                        <input type="password" class="form-control" name="Senha" required minlength="6" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Perfil</label>
                        <select class="form-select" name="Perfil" required>
                            <option value="">Selecione...</option>
                            <option value="1">Admin</option>
                            <option value="2">Gestor</option>
                            <option value="3">Padrão</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalVisualizar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="bi bi-eye me-2"></i>Detalhes do Usuário
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-4 fw-semibold">ID:</div>
                    <div class="col-8" id="viewId"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 fw-semibold">Nome:</div>
                    <div class="col-8" id="viewNome"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 fw-semibold">Login:</div>
                    <div class="col-8" id="viewLogin"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 fw-semibold">Email:</div>
                    <div class="col-8" id="viewEmail"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 fw-semibold">Perfil:</div>
                    <div class="col-8">
                        <span class="badge bg-primary" id="viewPerfil"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 fw-semibold">Cadastro:</div>
                    <div class="col-8" id="viewData"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">
                    <i class="bi bi-pencil me-2"></i>Editar Usuário
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Atualizar" method="post">
                <input type="hidden" id="editId" name="Id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome</label>
                        <input type="text" class="form-control" id="editNome" name="Nome" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Login</label>
                        <input type="text" class="form-control" id="editLogin" name="Login" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control" id="editEmail" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Senha</label>
                        <input type="password" class="form-control" name="Senha" placeholder="Deixe vazio para manter a atual" />
                        <small class="text-muted">Deixe em branco se não quiser alterar</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Perfil</label>
                        <select class="form-select" id="editPerfil" name="Perfil" required>
                            <option value="1">Admin</option>
                            <option value="2">Gestor</option>
                            <option value="3">Padrão</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDeletar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Deletar" method="post">
                <input type="hidden" id="deleteId" name="id" />
                <div class="modal-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Tem certeza que deseja excluir o usuário <strong id="deleteNome"></strong>?
                    </div>
                    <p class="mb-0">Esta ação não pode ser desfeita.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Sim, Excluir
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function visualizarUsuario(id, nome, login, email, perfil, data) {
            document.getElementById('viewId').textContent = id;
            document.getElementById('viewNome').textContent = nome;
            document.getElementById('viewLogin').textContent = login;
            document.getElementById('viewEmail').textContent = email;
            document.getElementById('viewPerfil').textContent = perfil;
            document.getElementById('viewData').textContent = data;
        }

        function editarUsuario(id, nome, login, email, perfil) {
            document.getElementById('editId').value = id;
            document.getElementById('editNome').value = nome;
            document.getElementById('editLogin').value = login;
            document.getElementById('editEmail').value = email;

            // Mapeia o perfil para o valor correto do Enum
            var perfilValor = '3'; // Padrão
            if (perfil === 'Admin') perfilValor = '1';
            else if (perfil === 'Gestor') perfilValor = '2';
            else if (perfil === 'Padrao') perfilValor = '3';

            document.getElementById('editPerfil').value = perfilValor;
        }

        function prepararDeletar(id, nome) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteNome').textContent = nome;
        }
    </script>
}